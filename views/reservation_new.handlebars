<div class="w3-container medi-yellow">
            <h2>Schedule an appointment</h2>
            {{!-- <p class="extra"><a href="/login">(Already have an account? Login</a>)</p> --}}
          </div>
          
          <div class="form-container">
          <form class="w3-container" method="post" action="/reservation/new">
            <input type="hidden" name="id" value="{{user._id}}">
            <p>
            <label>First Name</label>
            <input class="w3-input" type="text" name="fname" value="{{user.fname}}" readonly></p>
            <p>
            <label>Last Name</label>
            <input class="w3-input" type="text" name="lname" value="{{user.lname}}" readonly></p>
            <p>
            <label>Email</label>
            <input class="w3-input" type="text" name="email" value="{{user.email}}" readonly></p>
            <p>
            <label>Specialism</label>
            <select class="w3-input" name="specialism" onchange="updatedoc(this)" id="splist">
              <option></option>
              {{#each spList}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
            <p>
            <label>Doctor</label>
            <select class="w3-input" name="doctor_id" id="drlist" required>
              <option></option>
              {{#each doctorList}}
              <option value="{{this._id}}">{{this.fname}} {{this.lname}}</option>
              {{/each}}
            </select></p>
            <p>
            <label>Date</label>
            <input class="w3-input" type="date" name="app_date" value="" required></p>
            
            <br/>
            <p><button type="submit" class="button1">Schedule</button></p>
            
          </form>
          </div>
